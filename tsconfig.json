{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"noEmit": false,

		"declaration": true,
		"sourceMap": true,

		"lib": ["DOM", "ESNext"],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		"outDir": "./lib",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"exclude": ["./test/", "./lib/", "tsup.config.ts"]
}
