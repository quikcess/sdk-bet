{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"noEmit": true,

		"declaration": true,
		"sourceMap": true,

		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",

		"rootDir": "./src",
		"outDir": "./lib",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "../test/**/*.ts"],
	"exclude": ["./lib/", "tsup.config.ts"]
}
